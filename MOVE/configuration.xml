<?xml version="1.0"?>
<!-- Configuration pour generer la mobilitÃ© -->
<universe>
  <dimx>4000.0</dimx> <!-- x-dimension of the simulation area -->
  <dimy>50.0</dimy>  <!-- y-dimension of the simulation area -->
  <!-- <seed>18</seed>-->
  <extension class="de.uni_stuttgart.informatik.canu.mobisim.extensions.NSOutput" output="ns_traceHCAR.txt"/>  <!-- Trace file of mobility-->
  <extension class="de.uni_stuttgart.informatik.canu.mobisim.simulations.TimeSimulation" param="360.0"/>  <!-- Simulation time  -->
	<extension name="SpatialModel" class="de.uni_stuttgart.informatik.canu.spatialmodel.core.SpatialModel" min_x="0" max_x="4000" min_y="0" max_y="50">
	  <!-- <max_traffic_lights>6</max_traffic_lights> -->
		 	<reflect_directions>true</reflect_directions>
		<number_lane full="false" max="4" dir="true">3</number_lane> <!-- Lanes number -->
	</extension> 	
	<extension name="TrafficLight" class="eurecom.spatialmodel.extensions.TrafficLight" step="10000"/>
 <extension class="eurecom.spacegraph.SpaceGraph" cluster="true">
		<clusters density="0.00001">
      <cluster id="suburban">
        <density>0.00005</density>
        <ratio>1.0</ratio>
				<speed>25</speed>
      </cluster>
		</clusters>
 </extension> 
  <extension name="PosGen" class="de.uni_stuttgart.informatik.canu.tripmodel.generators.RandomInitialPositionGenerator"/>
  <extension name="TripGen" class="de.uni_stuttgart.informatik.canu.tripmodel.generators.RandomTripGenerator" >
    <reflect_directions>true</reflect_directions>
	  <minstay>5.0</minstay> <maxstay>20.0</maxstay>
  </extension>
  <nodegroup n="100">  <!-- Number of nodes 60-160-->
  <extension class="polito.uomm.IDM_LC" initposgenerator="PosGen" tripgenerator="TripGen">
		 <minspeed>10.00</minspeed>  <!-- Maximal speed -->
      <maxspeed>35.00</maxspeed>  <!-- Minmal speed -->
      <step>0.1</step>
			<b>1</b>
    </extension>
  </nodegroup>
  <extension class="de.uni_stuttgart.informatik.canu.mobisimadd.extensions.GUI">
    <width>700</width>
    <height>500</height>
    <step>1</step>
  </extension>
<!--
  <extension class="de.uni_stuttgart.informatik.canu.spatialmodel.extensions.DumpSpatialModel" output="dumped_graph_double_mult_all.fig"/>
-->
</universe>
